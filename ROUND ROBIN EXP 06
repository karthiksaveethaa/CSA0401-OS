#include <stdio.h>
int main(){
 int n,i,tq,bt[10],rem[10],wt[10]={0},tat[10],t=0,done;
 float aWT=0,aTAT=0;
 printf("No. of processes: "); scanf("%d",&n);
 for(i=0;i<n;i++){ printf("BT P%d: ",i+1); scanf("%d",&bt[i]); rem[i]=bt[i]; }
 printf("Time Quantum: "); scanf("%d",&tq);

 do{
  done=1;
  for(i=0;i<n;i++){
   if(rem[i]>0){ done=0;
    if(rem[i]>tq){ t+=tq; rem[i]-=tq; }
    else{ t+=rem[i]; wt[i]=t-bt[i]; rem[i]=0; }
   }
  }
 }while(!done);

 for(i=0;i<n;i++){ tat[i]=bt[i]+wt[i]; aWT+=wt[i]; aTAT+=tat[i];
  printf("P%d BT=%d WT=%d TAT=%d\n",i+1,bt[i],wt[i],tat[i]); }
 printf("Avg WT=%.2f Avg TAT=%.2f\n",aWT/n,aTAT/n);
}
