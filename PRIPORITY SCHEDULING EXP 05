#include <stdio.h>
int main(){
 int n,i,j;
 printf("No. of processes: "); scanf("%d",&n);
 int bt[n],pr[n],wt[n],tat[n],p[n],t;
 float aWT=0,aTAT=0;

 for(i=0;i<n;i++){ printf("P%d BT PR: ",i+1);
  scanf("%d%d",&bt[i],&pr[i]); p[i]=i+1; }

 for(i=0;i<n-1;i++)
  for(j=i+1;j<n;j++)
   if(pr[i]>pr[j]){
    t=pr[i];pr[i]=pr[j];pr[j]=t;
    t=bt[i];bt[i]=bt[j];bt[j]=t;
    t=p[i];p[i]=p[j];p[j]=t;
   }

 wt[0]=0;
 for(i=1;i<n;i++) wt[i]=wt[i-1]+bt[i-1];
 for(i=0;i<n;i++){ tat[i]=wt[i]+bt[i]; aWT+=wt[i]; aTAT+=tat[i];
  printf("P%d PR=%d BT=%d WT=%d TAT=%d\n",p[i],pr[i],bt[i],wt[i],tat[i]); }

 printf("Avg WT=%.2f Avg TAT=%.2f\n",aWT/n,aTAT/n);
}
